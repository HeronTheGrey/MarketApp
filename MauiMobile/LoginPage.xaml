<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMobile.LoginPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Logowanie" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry" Placeholder="Nazwa użytkownika" />
        <Entry x:Name="PasswordEntry" Placeholder="Hasło" IsPassword="True" />

        <Button Text="Zaloguj" Clicked="OnLoginClicked" />

        <Label x:Name="ErrorMessage" TextColor="Red" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>